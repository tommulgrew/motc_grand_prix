#include "library/trig"

struct CarAIParams {
    int todo;
}

struct CarAIState {
    float aiXOffset;
    float wanderOffset;
    int rndCounter;
    CarAIParams aiParams, baseAIParams;
}

struct CarInput {
    float accel;                // -1 to 1. +ve = accel, -ve = brake
    float steering;             // -1 to 1.
    float keyboardSteering;     // Keyboard steering (includes game controller dpad steering)
    float controllerSteering;   // Game controller analogue steering
}

struct CarAnimation {
    float wheelTurn, wheelPrev;
    float revs;
    float prevVel, suspension;
}

struct CarRaceState {
    bool isFinished;
    int lap;
}

struct Car {
    int carIndex;
    Vec pos;
    float turn, pitch;
    float vel, xd;
    float relZ;
    string name;
    CarInput input;
    CarAnimation anim;
    CarRaceState race;
    CarAIState aiState;
}
